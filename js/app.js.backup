                modalContent.style.opacity = '1';
            }
        }, 10);
    }
    
    // Resize handler
    let resizeTimeout;
    window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
            createIndicators();
            updateCarousel(false);
        }, 250);
