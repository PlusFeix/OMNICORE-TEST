        if (!isDragging) return;
        isDragging = false;
        carousel.style.cursor = 'grab';
        
        const diff = currentX - startX;
        const threshold = 50; // pixel di soglia per considerare uno swipe
        
        if (Math.abs(diff) > threshold && hasMoved) {
            if (diff > 0) {
                prevSlide();
            } else {
                nextSlide();
            }
        } else {
            updateCarousel(true);
        }
    }
    
